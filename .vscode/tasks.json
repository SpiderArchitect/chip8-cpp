{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build raylib game",
      "type": "process",
      "command": "C:/raylib/w64devkit/bin/g++.exe",
      "args": [
        "-g",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}\\game.exe",
        "-O2",
        "-I",
        "C:/raylib/raylib/src",
        "-L",
        "C:/raylib/raylib/src",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build & Run",
      "type": "process",
      "command": "${fileDirname}\\game.exe",
      "dependsOn": "build raylib game",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
